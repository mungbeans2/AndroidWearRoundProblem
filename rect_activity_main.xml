<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity" tools:deviceIds="wear_square"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#50000000"
        android:layout_centerHorizontal="true"
        android:alpha="1.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon"
            android:contentDescription='android:contentDescription="@string/description"'
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/nameOrNumberTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Wearable.Small"
            android:text="WIRELESS CALLER"
            android:layout_marginLeft="4dp"
            android:textColor="#fffcfff6"
            android:textSize="15sp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginRight="4dp"
            android:layout_above="@+id/cityAndStateTextView" />

        <TextView
            android:id="@+id/cityAndStateTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Wearable.Small"
            android:text="Seattle, WA"
            android:layout_marginLeft="4dp"
            android:textColor="#fffffdf7"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/nameOrNumberTextView"
            android:layout_marginRight="4dp" />

    </RelativeLayout>

</RelativeLayout>
